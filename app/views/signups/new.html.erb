<div class="container">
	<div class="col-12 signup text-center">
		<div class="signup-main">
			<h2 class='signup-text'>
				Get the latest updates from Stories
			</h2>
		</div>

			<%= form_for(@signup) do |f| %>
			<div class="signups">
				<%= f.label "First name", id: "firstname" %>
				<br>
    			<%= f.text_field :firstname, :id => 'data', required: true%><br>
    			<%= f.label "Email", id: "email" %>
    			<br>
    			<%= f.email_field :email, :id => 'data', required:true%><br>
  				<%= f.submit "Join", class:'submit' %>
			</div>
			<% end %>
		</div>
	</div>
